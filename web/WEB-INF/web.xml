<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <display-name>Controller</display-name>
        <servlet-name>Controller</servlet-name>
        <servlet-class>by.etc.karamach.controller.Controller</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Controller</servlet-name>
        <url-pattern>/controller</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Controller</servlet-name>
        <url-pattern>/get/*</url-pattern>
    </servlet-mapping>

    <!-- Filter Locale -->
    <filter>
        <filter-name>LocaleFilter</filter-name>
        <filter-class>by.etc.karamach.filter.LocaleFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>LocaleFilter</filter-name>
        <url-pattern>*</url-pattern>
    </filter-mapping>

    <!-- Filter GetRequest -->
    <filter>
        <filter-name>GetRequestFilter</filter-name>
        <filter-class>by.etc.karamach.filter.GetRequestFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>GetRequestFilter</filter-name>
        <url-pattern>/get/*</url-pattern>
    </filter-mapping>

    <!-- Filter Security -->
    <filter>
        <filter-name>SecurityFilter</filter-name>
        <filter-class>by.etc.karamach.filter.SecurityFilter</filter-class>

    </filter>

    <filter-mapping>
        <filter-name>SecurityFilter</filter-name>
        <servlet-name>Controller</servlet-name>
    </filter-mapping>

</web-app>